@{
    ViewData["Title"] = "Details";
}

@model ArticleDetailModel

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-4">
                <img src="~/images/@Model.Article.ImageUrl" width=270px, height="200px" style="object-fit: cover">
            </div>
            <div class="col-8">
                <h1 class="card-title display-6">@Model.Article.Name</h1>
                @foreach (var category in Model.Categories)
                {
                    <a href="#" class="btn btn-link p-0 mb-3">@category.Name</a>
                }
                <p class="card-text">@Model.Article.Content</p>
                <button type="submit" class="btn btn-sm btn-primary">Go to author profile</button>
            </div>
        </div>
    </div>

</div>